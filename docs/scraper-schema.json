{
    "id": "https://github.com/codeforboston/cornerwise/docs/scraper-schema",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "schema for Cornerwise scrapers",
    "type": "object",
    "properties": {
        "cases": {
            "type": "array",
            "description": "",
            "items": {
                "$ref": "#/definitions/case"
            }
        },
        "events": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/event"
            }
        }
    },
    "definitions": {
        "case": {
            "required": [
                "all_addresses",
                "complete",
                "case_number",
                "updated_date"
            ],
            "properties": {
                "case_number": {
                    "type": "string",
                    "description": "A case number for this case, unique within the scope of this region."
                },
                "first_hearing_date": {
                    "description": "The date and time of the first public hearing",
                    "type": "string",
                    "format": "date-time"
                },
                "all_addresses": {
                    "description": "An array of all the addresses associated with this proposal. The first address is used as the primary address.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "location": {
                    "description": "The coordinates of the proposal. If omitted, Cornerwise will geocode the primary address.",
                    "type": "object",
                    "properties": {
                        "lat": {
                            "type": "number"
                        },
                        "long": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "lat",
                        "long"
                    ]
                },
                "summary": {
                    "type": "string",
                    "description": "A brief description of the case"
                },
                "description": {
                    "type": "string",
                    "description": "A detailed description of the case."
                },
                "parcel_id": {
                    "description": "An identifier for the corresponding parcel, unique within the scope of the region.",
                    "type": "string"
                },
                "updated_date": {
                    "description": "The last modification date and time",
                    "type": "string",
                    "format": "date-time"
                },
                "region_name": {
                    "description": "If omitted, Cornerwise will use the region name configured for the importer.",
                    "type": "string"
                },
                "source": {
                    "description": "A site where users can find additional information",
                    "type": "string",
                    "format": "uri"
                },
                "status": {
                    "type": {
                        "type": "string"
                    }
                },
                "complete": {
                    "description": "Indicates whether the case is still pending review (false), or if it has been reviewed or withdrawn (true)",
                    "type": "boolean"
                },
                "decision": {
                    "type": "object",
                    "description": "Provides additional details about the decision from the reviewing body",
                    "properties": {
                        "approved": {
                            "type": "boolean"
                        },
                        "votes_for": {
                            "type": "number"
                        },
                        "votes_against": {
                            "type": "number"
                        },
                        "comments": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "dependencies": {
                        "votes_for": [
                            "votes_against"
                        ]
                    }
                },
                "events": {
                    "type": "object",
                    "$ref": "#/definitions/event"
                },
                "documents": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/link"
                    }
                },
                "images": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/link"
                    }
                },
                "attributes": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                }
            }
        },
        "event": {
            "required": [
                "title",
                "start"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "start": {
                    "type": "string",
                    "format": "date-time"
                },
                "duration": {
                    "type": "string",
                    "description": "Estimated duration of the event.",
                    "pattern": "^\\d\\d:\\d\\d"
                },
                "address": {
                    "type": "object",
                    "properties": {
                        "name":           { "type": "string" },
                        "street_address": { "type": "string" },
                        "city":           { "type": "string" },
                        "state":          { "type": "string" }
                    },
                    "required": ["street_address", "city", "state"]
                },
                "region_name": {
                    "type": "string"
                },
                "cases": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": ""
                    }
                },
                "documents": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/link"
                    }
                }
            }
        },
        "link": {
            "required": [
                "title",
                "url"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "content-type": {
                    "description": "MIME type of the document",
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
